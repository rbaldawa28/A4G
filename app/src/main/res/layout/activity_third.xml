<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6BBC0"
    tools:context=".ThirdActivity">

    <TextView
        android:id="@+id/pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="30dp"
        android:text="Your Top Pets"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/firstChoice"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="16"
        android:inputType="text"
        android:textColorHint="@color/black"
        android:hint="First Choice"
        android:layout_marginRight="250dp"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pet"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/firstPet"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:backgroundTint="#402243"
        android:text="First Option"
        android:textColor="@color/white"
        android:layout_marginLeft="450dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="@+id/firstChoice"
        app:layout_constraintBottom_toBottomOf="@+id/firstChoice" />

    <EditText
        android:id="@+id/secondChoice"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="16"
        android:inputType="text"
        android:hint="Second Choice"
        android:textColorHint="@color/black"
        android:layout_marginRight="250dp"
        android:layout_marginTop="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pet"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/secondPet"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:backgroundTint="#402243"
        android:text="Second Option"
        android:textColor="@color/white"
        android:layout_marginLeft="450dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="@+id/secondChoice"
        app:layout_constraintBottom_toBottomOf="@+id/secondChoice" />

    <EditText
        android:id="@+id/thirdChoice"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="16"
        android:inputType="text"
        android:hint="Third Choice"
        android:textColorHint="@color/black"
        android:layout_marginRight="250dp"
        android:layout_marginTop="450dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pet"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/thirdPet"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:backgroundTint="#402243"
        android:text="Second Option"
        android:textColor="@color/white"
        android:layout_marginLeft="450dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="@+id/thirdChoice"
        app:layout_constraintBottom_toBottomOf="@+id/thirdChoice" />

    <EditText
        android:id="@+id/fourthChoice"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="16"
        android:inputType="text"
        android:hint="Fourth Choice"
        android:textColorHint="@color/black"
        android:layout_marginRight="250dp"
        android:layout_marginTop="600dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pet"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fourthPet"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:backgroundTint="#402243"
        android:text="Second Option"
        android:textColor="@color/white"
        android:layout_marginLeft="450dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fourthChoice"
        app:layout_constraintBottom_toBottomOf="@+id/fourthChoice" />

</androidx.constraintlayout.widget.ConstraintLayout>