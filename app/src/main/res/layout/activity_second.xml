<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:background="#D6BBC0">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:fontFamily="monospace"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="@string/title"
        android:textColor="@color/black"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_height="48dp"
        android:layout_below="@id/title"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="text"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/pets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:text="@string/pets"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"/>

    <CheckBox
        android:id="@+id/dog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/dog"
        android:layout_below="@id/pets"
        android:layout_marginStart="10dp"/>

    <CheckBox
        android:id="@+id/cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/cat"
        android:layout_below="@id/pets"
        android:layout_toEndOf="@id/dog"
        android:layout_marginStart="10dp"/>

    <CheckBox
        android:id="@+id/bird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/bird"
        android:layout_below="@id/pets"
        android:layout_toEndOf="@id/cat"
        android:layout_marginStart="10dp"/>

    <CheckBox
        android:id="@+id/hamster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/hamster"
        android:layout_below="@id/pets"
        android:layout_toEndOf="@id/bird"
        android:layout_marginStart="10dp"/>

    <CheckBox
        android:id="@+id/fish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/fish"
        android:layout_below="@id/pets"
        android:layout_toEndOf="@id/hamster"
        android:layout_marginStart="10dp"/>

    <EditText
        android:id="@+id/budget"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_below="@id/dog"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:drawableStart="@drawable/ic_baseline_attach_money_24"
        android:ems="8"
        android:hint="@string/budget"
        android:inputType="number"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/age"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_below="@id/sqft"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:drawableStart="@drawable/ic_baseline_access_alarm_24"
        android:ems="8"
        android:hint="@string/age"
        android:inputType="number"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/sqft"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_below="@id/budget"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:drawableStart="@drawable/ic_baseline_home_24"
        android:ems="8"
        android:hint="@string/sqft"
        android:inputType="number"
        android:textColorHint="@color/black"/>

    <EditText
        android:id="@+id/householdSize"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_below="@id/age"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentStart="true"
        android:drawableStart="@drawable/ic_baseline_home_24"
        android:ems="8"
        android:hint="@string/householdSize"
        android:inputType="number"
        android:textColorHint="@color/black"/>

    <TextView
        android:id="@+id/timeQuestion"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/householdSize"
        android:text="@string/timeAtHome"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/timeAtHome"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/householdSize"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/timeQuestion"
        android:ems="6"
        android:hint="@string/time"
        android:drawableStart="@drawable/ic_baseline_access_alarm_24"
        android:inputType="number"
        android:textColorHint="@color/black"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit"
        android:layout_width="131sp"
        android:layout_height="58sp"
        android:layout_below="@id/timeQuestion"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#402243"
        android:text="@string/submit"
        android:textColor="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back"
        android:layout_width="131sp"
        android:layout_height="58sp"
        android:layout_marginTop="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/timeQuestion"
        android:backgroundTint="#402243"
        android:text="@string/back"
        android:textColor="@color/white"/>


</android.widget.RelativeLayout>
